<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/exampleMinus"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/minus"
        android:visibility="gone" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.96"
        android:orientation="vertical"
        android:padding="6dip">

        <utils.other.ExTextView
            android:id="@+id/vExampleJP"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:ellipsize="none"
            android:scrollHorizontally="true"
            android:text="Super original jp"
            android:textSize="18sp" />

        <utils.other.ExTextView
            android:id="@+id/vExampleEN"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:ellipsize="none"
            android:scrollHorizontally="true"
            android:text="Super translate"
            android:textSize="16sp" />
    </LinearLayout>


    <ImageView
        android:layout_weight="0.04"
        android:id="@+id/vShowArrowExample"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginRight="6dp"
        android:gravity="center_vertical|right"
        android:layout_gravity="center_vertical"
        android:paddingLeft="2dp"
        android:visibility="gone"
        android:src="@drawable/go_sign" />
</LinearLayout>