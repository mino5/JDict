<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:orientation="vertical">

    <utils.other.ExTextView
        android:id="@+id/navigationActivityText"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:paddingLeft="50dp"
        android:textColor="@color/drawer_list_selector_foreground"
        android:background="@drawable/drawer_list_selector"
        android:text="Test"
        android:autoText="false"
        android:textSize="14sp"
        android:layout_gravity="center_vertical"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:id="@+id/imageViewNavigation"
        android:background="@drawable/rounded_imired"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>