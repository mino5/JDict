<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <utils.other.ExTextView
        android:id="@+id/noteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="6dip"
        android:scrollHorizontally="true"
        android:text="Test"
        android:textSize="18sp" />

    <include
        android:id="@+id/note_item_layout"
        layout="@layout/list_recent_item"
        android:visibility="gone" />

    <include
        android:id="@+id/note_example_layout"
        layout="@layout/list_recent_item_example"
        android:visibility="gone" />

    <include
        android:id="@+id/note_kanji_layout"
        layout="@layout/list_recent_item_kanji"
        android:visibility="gone" />
</LinearLayout>