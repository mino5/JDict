<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray"
    android:weightSum="1">

    <utils.other.ExTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="JDict"
        android:id="@+id/textView3"
        android:textColor="@color/gray_match"
        android:background="@color/gray"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal" />

    <utils.other.ExTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textViewVer"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/gray_match"
        android:textSize="12sp"/>


    <utils.other.ExTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Based on Jim Breen&apos;s JMDict dictionary"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/gray_match"
        android:textSize="14sp"/>

    <utils.other.ExTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="© 2014-2016 Dominik Szczepański "
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/gray_match"
        android:textSize="12sp"
        android:foreground="@color/graydark" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray">

        <utils.other.ExTextView
            android:id="@+id/detailSectionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:paddingLeft="10dp"
            android:text="CREDITS"
            android:textColor="@color/graydark"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />

        <RelativeLayout
            android:id="@+id/sectionProgressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/detailSectionHeader"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progressBar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:visibility="invisible" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout  android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">
    <utils.other.ExTextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Aesthetics are inspired by &quot;imi wa ?&quot; dictionary developed by Pierre-Philippe di Costanzo and François Cogne"
        android:id="@+id/textView6"
        android:background="@color/white"
        android:textIsSelectable="false"
        android:textSize="12sp"
        android:layout_weight="0.04"
        android:textAlignment="center"
        android:gravity="center" />
   </LinearLayout>


    <LinearLayout  android:layout_width="fill_parent"
        android:layout_marginTop="18dp"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <utils.other.ExTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="This dictionary is based on JMDict and KANJIDIC dictionary files which are a property of the Electronic Dictionary Research and Development Group."
            android:id="@+id/textView7"
            android:background="@color/white"
            android:textIsSelectable="false"
            android:textSize="12sp"
            android:layout_weight="0.04"
            android:textAlignment="center"
            android:gravity="center" />
    </LinearLayout>


    <LinearLayout  android:layout_width="fill_parent"
        android:layout_marginTop="18dp"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <utils.other.ExTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Stroke order animations are taken and used under a license from kanjiVG."
            android:id="@+id/textView8"
            android:background="@color/white"
            android:textIsSelectable="false"
            android:textSize="12sp"
            android:layout_weight="0.04"
            android:textAlignment="center"
            android:gravity="center" />
    </LinearLayout>


    <LinearLayout  android:layout_width="fill_parent"
        android:layout_marginTop="18dp"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <utils.other.ExTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Example sentences are taken from Tatoeba project which includes examples of the Tanaka Corpus. "
            android:id="@+id/textView9"
            android:background="@color/white"
            android:textIsSelectable="false"
            android:textSize="12sp"
            android:layout_weight="0.04"
            android:textAlignment="center"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout  android:layout_width="fill_parent"
        android:layout_marginTop="18dp"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <utils.other.ExTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="I want to thank my parents, Yukiko Tsuda, Akira Sugawara, Marcin Burgknap, Ryszard Spurek, Karolina Tokarska, Wojtek Kowaluk, Szymon Zajdel and Jim Breen for their support and help."
            android:id="@+id/textView10"
            android:background="@color/white"
            android:textIsSelectable="false"
            android:textSize="12sp"
            android:layout_weight="0.04"
            android:textAlignment="center"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>